<div class = "center jumbotron">
<h1>Looking for <%= @search_term%> ?</h1>
</div>

<div class = "container">
<h1> Supply the keyword and app will query the Food2Fork API for a result</h1>

<table class="table">
  <tr>
  	<th>Thumbnail</th>
  	<th>Title</th>
  	<th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      
     <td> <%= link_to image_tag(recipe["image_url"], height: '100', width: '100'), recipe["source_url"] %></td>
       
     <td><%= link_to raw(recipe["title"]), recipe["source_url"] %></td>
	 
     <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>
</div>
</div>


